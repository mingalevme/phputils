{
    "name": "mingalevme/utils",
    "description": "Some helpers to make your life easier",
    "license": "MIT",
    "keywords": [
        "http_build_url",
        "php",
        "utils"
    ],
    "authors": [
        {
            "name": "Mikhail Mingalev",
            "email": "mingalevme@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "mingalevme/utils-arr": "^1.0",
        "mingalevme/utils-url": "^1.0",
        "psr/log": "^1.0 || ^2.0 || ^3.0"
    },
    "require-dev": {
        "ext-dom": "*",
        "ext-libxml": "*",
        "ext-simplexml": "*",
        "ergebnis/composer-normalize": "^2.45",
        "phpunit/phpunit": "^6.0 || ^7.0 || ^8.0 || ^9.0 || ^10.0",
        "friendsofphp/php-cs-fixer": "^3.65"
    },
    "suggest": {
        "ext-dom": "Requires by Mingalevme\\Utils\\Xml",
        "ext-libxml": "Requires by Mingalevme\\Utils\\Xml",
        "ext-simplexml": "Requires by Mingalevme\\Utils\\Xml"
    },
    "autoload": {
        "psr-4": {
            "Mingalevme\\Utils\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mingalevme\\Tests\\Utils\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "phpunit": "@php -d xdebug.mode=off vendor/bin/phpunit"
    }
}
